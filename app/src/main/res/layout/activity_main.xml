            android:id="@+id/stop"
            android:layout_width="80dp"
            android:layout_height="87dp"
            android:layout_gravity="center_vertical"
            android:layout_weight="0.10"
            android:background="@drawable/qidong" />
    </LinearLayout>

    <LinearLayout
